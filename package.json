{
	"name": "use-entity",
	"version": "0.1.0",
	"description": "Fast, typed entity state for React with CRUD actions and selectors.",
	"keywords": [
		"react",
		"state",
		"entity",
		"crud"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/WookieFPV/use-entity.git"
	},
	"bugs": {
		"url": "https://github.com/WookieFPV/use-entity/issues"
	},
	"homepage": "https://github.com/WookieFPV/use-entity#readme",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./tanstack": {
			"types": "./dist/tanstack.d.ts",
			"import": "./dist/tanstack.js",
			"require": "./dist/tanstack.cjs"
		}
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"biome:check": "biome check",
		"biome:fix": "biome check --write --unsafe",
		"biome:format": "biome format --write",
		"test": "bun test",
		"build": "tsup",
		"build:dev": "tsup --watch --clean false",
		"typecheck": "tsc"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@happy-dom/global-registrator": "20.1.0",
		"@reduxjs/toolkit": "^2.0.0",
		"@tanstack/react-store": "0.8.0",
		"@testing-library/dom": "10.4.1",
		"@testing-library/jest-dom": "6.9.1",
		"@testing-library/react": "16.3.2",
		"@types/bun": "latest",
		"@types/react": "19.2.9",
		"@types/react-dom": "19.2.3",
		"lefthook": "2.0.15",
		"react": "^19.2.3",
		"tsup": "8.5.1"
	},
	"peerDependencies": {
		"typescript": "^5",
		"react": ">18.0.0",
		"@reduxjs/toolkit": "^2.0.0",
		"@tanstack/react-store": "0.8.0"
	},
	"peerDependenciesMeta": {
		"@tanstack/react-store": {
			"optional": true
		}
	}
}
